{
  "name": "2associes-meteor-boilerplate",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "dev": "meteor run --settings settings-development.json",
    "test": "chimp --ddp=http://localhost:3000 --browser=chrome",
    "test-watch": "chimp --watch --ddp=http://localhost:3000 --browser=chrome",
    "lint": "eslint .",
    "pretest": "npm run lint --silent"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "rules": {
      "accessor-pairs": "off",
      "arrow-spacing": ["off", { "before": true, "after": true }],
      "block-spacing": ["off", "always"],
      "brace-style": ["off", "1tbs", { "allowSingleLine": true }],
      "camelcase": ["off", { "properties": "never" }],
      "comma-dangle": ["off", {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }],
      "comma-spacing": ["off", { "before": false, "after": true }],
      "comma-style": ["off", "last"],
      "constructor-super": "off",
      "curly": ["off", "multi-line"],
      "dot-location": ["off", "property"],
      "eol-last": "off",
      "eqeqeq": ["off", "always", { "null": "ignore" }],
      "func-call-spacing": ["off", "never"],
      "generator-star-spacing": ["off", { "before": true, "after": true }],
      "handle-callback-err": ["off", "^(err|off)$" ],
      "indent": ["off", 2, { "SwitchCase": 1 }],
      "key-spacing": ["off", { "beforeColon": false, "afterColon": true }],
      "keyword-spacing": ["off", { "before": true, "after": true }],
      "new-cap": ["off", { "newIsCap": true, "capIsNew": false }],
      "new-parens": "off",
      "no-array-constructor": "off",
      "no-caller": "off",
      "no-class-assign": "off",
      "no-cond-assign": "off",
      "no-const-assign": "off",
      "no-constant-condition": ["off", { "checkLoops": false }],
      "no-control-regex": "off",
      "no-debugger": "off",
      "no-delete-var": "off",
      "no-dupe-args": "off",
      "no-dupe-class-members": "off",
      "no-dupe-keys": "off",
      "no-duplicate-case": "off",
      "no-empty-character-class": "off",
      "no-empty-pattern": "off",
      "no-eval": "off",
      "no-ex-assign": "off",
      "no-extend-native": "off",
      "no-extra-bind": "off",
      "no-extra-boolean-cast": "off",
      "no-extra-parens": ["off", "functions"],
      "no-fallthrough": "off",
      "no-floating-decimal": "off",
      "no-func-assign": "off",
      "no-global-assign": "off",
      "no-implied-eval": "off",
      "no-inner-declarations": ["off", "functions"],
      "no-invalid-regexp": "off",
      "no-irregular-whitespace": "off",
      "no-iterator": "off",
      "no-label-var": "off",
      "no-labels": ["off", { "allowLoop": false, "allowSwitch": false }],
      "no-lone-blocks": "off",
      "no-mixed-operators": ["off", {
        "groups": [
          ["==", "!=", "===", "!==", ">", ">=", "<", "<="],
          ["&&", "||"],
          ["in", "instanceof"]
        ],
        "allowSamePrecedence": true
      }],
      "no-mixed-spaces-and-tabs": "off",
      "no-multi-spaces": "off",
      "no-multi-str": "off",
      "no-multiple-empty-lines": ["off", { "max": 1, "maxEOF": 0 }],
      "no-negated-in-lhs": "off",
      "no-new": "off",
      "no-new-func": "off",
      "no-new-object": "off",
      "no-new-require": "off",
      "no-new-symbol": "off",
      "no-new-wrappers": "off",
      "no-obj-calls": "off",
      "no-octal": "off",
      "no-octal-escape": "off",
      "no-path-concat": "off",
      "no-proto": "off",
      "no-redeclare": "off",
      "no-regex-spaces": "off",
      "no-return-assign": ["off", "except-parens"],
      "no-return-await": "off",
      "no-self-assign": "off",
      "no-self-compare": "off",
      "no-sequences": "off",
      "no-shadow-restricted-names": "off",
      "no-sparse-arrays": "off",
      "no-tabs": "off",
      "no-template-curly-in-string": "off",
      "no-this-before-super": "off",
      "no-throw-literal": "off",
      "no-trailing-spaces": "off",
      "no-undef": "off",
      "no-undef-init": "off",
      "no-unexpected-multiline": "off",
      "no-unmodified-loop-condition": "off",
      "no-unneeded-ternary": ["off", { "defaultAssignment": false }],
      "no-unreachable": "off",
      "no-unsafe-finally": "off",
      "no-unsafe-negation": "off",
      "no-unused-expressions": ["off", { "allowShortCircuit": true, "allowTernary": true, "allowTaggedTemplates": true }],
      "no-unused-vars": ["off", { "vars": "all", "args": "none", "ignoreRestSiblings": true }],
      "no-use-before-define": ["off", { "functions": false, "classes": false, "variables": false }],
      "no-useless-call": "off",
      "no-useless-computed-key": "off",
      "no-useless-constructor": "off",
      "no-useless-escape": "off",
      "no-useless-rename": "off",
      "no-useless-return": "off",
      "no-whitespace-before-property": "off",
      "no-with": "off",
      "object-property-newline": ["off", { "allowMultiplePropertiesPerLine": true }],
      "one-var": ["off", { "initialized": "never" }],
      "operator-linebreak": ["off", "after", { "overrides": { "?": "before", ":": "before" } }],
      "padded-blocks": ["off", { "blocks": "never", "switches": "never", "classes": "never" }],
      "prefer-promise-reject-offs": "off",
      "quotes": ["off", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
      "rest-spread-spacing": ["off", "never"],
      "semi": ["off", "never"],
      "semi-spacing": ["off", { "before": false, "after": true }],
      "space-before-blocks": ["off", "always"],
      "space-before-function-paren": ["off", "always"],
      "space-in-parens": ["off", "never"],
      "space-infix-ops": "off",
      "space-unary-ops": ["off", { "words": true, "nonwords": false }],
      "spaced-comment": ["off", "always", {
        "line": { "markers": ["*package", "!", "/", ","] },
        "block": { "balanced": true, "markers": ["*package", "!", ",", ":", "::", "flow-include"], "exceptions": ["*"] }
      }],
      "symbol-description": "off",
      "template-curly-spacing": ["off", "never"],
      "template-tag-spacing": ["off", "never"],
      "unicode-bom": ["off", "never"],
      "use-isnan": "off",
      "valid-typeof": ["off", { "requireStringLiterals": true }],
      "wrap-iife": ["off", "any", { "functionPrototypeMethods": true }],
      "yield-star-spacing": ["off", "both"],
      "yoda": ["off", "never"],

      "import/export": "off",
      "import/first": "off",
      "import/no-absolute-path": "off",
      "import/no-duplicates": "off",
      "import/no-webpack-loader-syntax": "off",

      "node/no-deprecated-api": "off",
      "node/process-exit-as-throw": "off",

      "promise/param-names": "off",

      "standard/array-bracket-even-spacing": ["off", "either"],
      "standard/computed-property-even-spacing": ["off", "even"],
      "standard/no-callback-literal": "off",
      "standard/object-curly-even-spacing": ["off", "either"],

      "import/extensions":"off",
      "import/no-extraneous-dependencies":"off",
      "func-names":"off",
      "meteor/no-template-lifecycle-assignments":"off",
      "meteor/no-session":"off",
      "no-var":"off",
      "vars-on-top":"off",
      "prefer-const":"off",
      "meteor/eventmap-params":"off",
      "object-shorthand":"off",
      "prefer-arrow-callback":"off",
      "no-restricted-syntax":"off",
      "import/prefer-default-export":"off",
      "object-curly-spacing":"off",
      "max-len":"off",
      "no-console":"off"
    }
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "bcrypt": "^0.8.7",
    "chimp": "^0.47.2",
    "meteor-node-stubs": "~0.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.1",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-meteor": "^0.3.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-meteor": "^4.0.1",
    "eslint-plugin-react": "^6.10.3"
  }
}
